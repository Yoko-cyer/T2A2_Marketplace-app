<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Meal name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Ingredients</th>
      <th>Price</th>
      <th>Place</th>
      <th>Time</th>
      <th>Message</th>
      <th>Guest number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.user_id %></td>
        <td><%= list.meal_name %></td>
        <td><%= list.category %></td>
        <td><%= list.description %></td>
        <td><%= list.ingredients %></td>
        <td><%= list.price %></td>
        <td><%= list.place %></td>
        <td><%= list.time %></td>
        <td><%= list.message %></td>
        <td><%= list.guest_number %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

